---
interface Props {
  title: string;
	image: string;
	link: string
}

import { Image } from "astro:assets"

import externalLink from '../images/icons/external-link.svg'

const { title, image, link } = Astro.props;
const cardImage = (await import(`../images/portfolio/${image}.png`)).default;
---

<div class="col">
  <div class="card">
    <a href={link} target="_blank">
      <Image src={cardImage} alt={title} class="img-fluid" />
    </a>
    <div class="card-body">
      { link !== '' && image !== '' &&
        <a href={link} target="_blank" class="link-dark link-underline link-underline-opacity-0 link-underline-opacity-75-hover">
          <h5 class="card-title">{title} <Image src={externalLink} alt="Link" class="card-icon"/></h5>
        </a>
      }
    </div>
  </div>
</div>