---
import { Image } from 'astro:assets';

interface Props {
  title: string;
  body: string;
  icon: string;
}

const { title, body, icon } = Astro.props;

const iconPath = await import(`../images/icons/${icon}.svg`);
---

<div class="col">
  <div class="card">
    <div class="card-body">
      <Image src={iconPath} alt={title} class="card-icon" width={30} height={30} />
      <h5 class="card-title mt-1">{title}</h5>
      <p class="card-text">{body}</p>
    </div>
  </div>
</div>