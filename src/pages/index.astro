---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Header from '../components/Header.astro'
import Form from '../components/Form.astro'
import CardImage from '../components/CardImage.astro'
import CardIcon from '../components/CardIcon.astro'
import Footer from '../components/Footer.astro'

import { features, portfolio, socialNetworks } from '@data'
import bgImage from '../images/desktop-banner.png'
---

<Layout title="emamut">
	<main>
		<Header backgroundImg={`url(${bgImage.src})`} />
		<div class="container">
			<section class="pt-5">
				<div class="row row-cols-1 row-cols-md-3 g-4">
				{features.map(({title, body, icon}) => {
					return (
						<Card title={title} body={body} icon={icon} />
					)
				})}
				</div>
			</section>
			<section class="mt-5">
				<h2>Our Work</h2>
				<div class="row row-cols-1 row-cols-md-3 g-4 mt-3">
					{portfolio.map(({title, image, link}) => {
						return (
							<CardImage image={image} title={title} link={link} />
						)
					})}
				</div>
			</section>
			<section class="mt-5">
				<h2>Contact Us</h2>
				<div class="row mt-3">
					<div class="col-md-6">
						<Form />
					</div>
					<div class="col-md-6 mt-3 mt-md-0">
						<div class="row row-cols-2 justify-content-center g-4">
							{socialNetworks.map(({icon, username, link}) => {
								return (
									<CardIcon icon={icon} link={link} username={username} />
								)
							})}
						</div>
					</div>
				</div>
			</section>
		</div>
		<Footer />
	</main>
</Layout>